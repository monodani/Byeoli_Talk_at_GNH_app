{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Course Satisfaction CSV Schema - BaseLoader Compatible",
  "description": "Flexible schema for course_satisfaction.csv with enhanced type flexibility",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "교육주차": { 
      "type": "string", 
      "minLength": 2,
      "description": "교육 실시 주차 (예: 3월 3주차)"
    },
    "교육과정_기수": { 
      "oneOf": [
        { "type": "integer", "minimum": 1 },
        { "type": "string", "pattern": "^\\d+$" }
      ],
      "description": "교육과정 기수 (정수 또는 문자열 숫자)"
    },
    "교육과정": { 
      "type": "string", 
      "minLength": 1,
      "description": "교육과정명"
    },
    "교육과정_유형": { 
      "type": "string", 
      "minLength": 1,
      "description": "교육과정 분류 유형"
    },
    "교육일자": { 
      "type": "string", 
      "minLength": 5,
      "description": "교육 실시 일자"
    },
    "교육장소": { 
      "type": "string", 
      "minLength": 1,
      "description": "교육 실시 장소"
    },
    "교육인원": { 
      "oneOf": [
        { "type": "integer", "minimum": 1 },
        { "type": "string", "pattern": "^\\d+$" }
      ],
      "description": "교육 참여 인원수"
    },
    "전반만족도": { 
      "oneOf": [
        { "type": "number", "minimum": 0, "maximum": 5 },
        { "type": "string", "pattern": "^\\d*\\.?\\d+$" }
      ],
      "description": "전반적인 만족도 점수"
    },
    "역량향상도": { 
      "oneOf": [
        { "type": "number", "minimum": 0, "maximum": 5 },
        { "type": "string", "pattern": "^\\d*\\.?\\d+$" }
      ],
      "description": "역량향상 체감도 점수"
    },
    "현업적용도": { 
      "oneOf": [
        { "type": "number", "minimum": 0, "maximum": 5 },
        { "type": "string", "pattern": "^\\d*\\.?\\d+$" }
      ],
      "description": "현업적용 가능성 점수"
    },
    "교과편성_만족도": { 
      "oneOf": [
        { "type": "number", "minimum": 0, "maximum": 5 },
        { "type": "string", "pattern": "^\\d*\\.?\\d+$" }
      ],
      "description": "교과편성에 대한 만족도"
    },
    "교육과정별_강의만족도_평균": { 
      "oneOf": [
        { "type": "number", "minimum": 0, "maximum": 5 },
        { "type": "string", "pattern": "^\\d*\\.?\\d+$" }
      ],
      "description": "강의만족도 평균 점수"
    },
    "종합만족도": { 
      "oneOf": [
        { "type": "number", "minimum": 0, "maximum": 5 },
        { "type": "string", "pattern": "^\\d*\\.?\\d+$" }
      ],
      "description": "전체 만족도 종합 점수"
    },
    "교육연도": { 
      "oneOf": [
        { "type": "integer", "minimum": 2000, "maximum": 2100 },
        { "type": "string", "pattern": "^20\\d{2}$" }
      ],
      "description": "교육 실시 연도"
    },
    "교육과정_순위": { 
      "oneOf": [
        { "type": "integer", "minimum": 1 },
        { "type": "string", "pattern": "^\\d+$" }
      ],
      "description": "해당 연도 교육과정 순위"
    }
  },
  "required": [
    "교육주차", "교육과정_기수", "교육과정", "교육과정_유형", "교육일자", "교육장소",
    "교육인원", "전반만족도", "역량향상도", "현업적용도", "교과편성_만족도",
    "교육과정별_강의만족도_평균", "종합만족도", "교육연도", "교육과정_순위"
  ]
}
